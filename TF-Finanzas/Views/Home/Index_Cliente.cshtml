
@{
    ViewBag.Title = "Index_Admin";
    Layout = "~/Views/Shared/_Layout_Index_Cliente.cshtml";
}
@{TF_Finanzas.Models.Usuario us = (TF_Finanzas.Models.Usuario)Session[TF_Finanzas.Constantes.SessionName.User];
    string nombre = us.nombre;}
<!DOCTYPE HTML>
<!--
